# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/autocare360
DB_USERNAME=appuser
DB_PASSWORD=apppass

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Docker Configuration
DOCKER_REGISTRY=your-docker-username
VERSION=latest

# Deployment
ENVIRONMENT=dev

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Configuration (for production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# GitHub Actions Secrets (set these in GitHub repository settings)
# DOCKER_USERNAME=your-docker-username
# DOCKER_PASSWORD=your-docker-password
# HEROKU_API_KEY=your-heroku-api-key
# HEROKU_EMAIL=your-email@example.com
# HEROKU_APP_NAME_STAGING=autocare360-staging
# PRODUCTION_URL=autocare360.example.com
# INFRA_REPO=your-org/infrastructure-repo
# INFRA_PAT=github-personal-access-token
